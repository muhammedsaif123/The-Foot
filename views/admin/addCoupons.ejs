    expiryDate.addEventListener("input",()=>{
      if(expiryDate.value.trim()==""){
        expiryDate.setCustomValidity("expiry date cannot be empty")

      }else{
        expiryDate.setCustomValidity("")

      }
    })

    maxCartAmount.addEventListener("input",()=>{
      if(maxCartAmount.value.trim()==""){
        maxCartAmount.setCustomValidity("maximum cart amount cannot be empty")

      }else{
        maxCartAmount.setCustomValidity("")

      }
    })

    maxDiscountAmount.addEventListener("input",()=>{
      if(maxDiscountAmount.value.trim()==""){
        maxDiscountAmount.setCustomValidity("maximum discount amount cannot be empty")

      }else{
        maxDiscountAmount.setCustomValidity("")

      }
    })

    maxCoupon.addEventListener("input",()=>{
      if(maxCoupon.value.trim()==""){
        maxCoupon.setCustomValidity("maximum coupon cannot be empty")

      }else{
        maxCoupon.setCustomValidity("")

      }
    })
    const form = document.getElementById("myForm")
    form.addEventListener("submit",(event)=>{
      event.preventDefault();
      alert("Add Coupon")
      form.submit()
    })
   
