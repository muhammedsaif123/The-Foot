<%- include('../layouts/header.ejs')%>
<br>
<div id="main-wrapper">
    <!-- row -->
    <div class="row">
        <div class="col-md-11 grid-margin" style="margin-left: 40px;">
            <div class="card card-white">
                <br>
                <div class="card-heading clearfix">
                    <h4 class="card-title" style="margin-left: 15px;">Add Coupon</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label for="exampleInput1">Coupon Name</label>
                            <input type="text" class="form-control" placeholder="Enter Coupon Code" id="code" name="code" required>
                            <!-- <input class="form-control"  placeholder="Enter Coupon Code" id="code" name="code"type="text" required/> -->
                        </div>
                        <br>
                        <div class="form-group">
                            <label for="exampleInput2">Discount Type
                            <select class="form-control"  name="discountType"id="discountType" >
                                <option>Fixed</option>
                                <option>Percentage Type</option>
                               </select>
                            </label>
                        </div>
                        <br>
                        <div class="form-group">
                            <label>Discount Amount</label>
                            <input class="form-control"placeholder="Enter the discount amount"id="amount"name="amount"type="number" required/>
                        </div>
                        <br>
                        <div class="form-group">
                            <label>
                                <span class="text-gray-700 dark:text-gray-400">Expiry Date</span>
                                <input class="form-control"id="date" name="date"type="date"required/>
                            </label>
                        </div>
                        <br>
                        <div class="form-group">
                            <label for="exampleInput3">Max CartAmount</label>
                            <input class=  "form-control"placeholder="Enter the Cart amount"id="cartAmount"name="cartAmount" type="number" required />
                        </div>
                        <br>
                        <div class="form-group">
                            <label for="validationCustom02">Maximum Discount Amount </label>
                            <input class= "form-control" placeholder="Enter the Discount Amount" id="discountAmount"name="discountAmount"type="number"required />
                        </div>
                        <br>
                        <div class="form-group">
                            <label class="block text-sm col-md-10">
                              <span class="text-gray-700 dark:text-gray-400 ">Max Coupons</span>
                              <input class= "form-control"placeholder="Enter the count of coupons"id="couponCount"name="couponCount" type="number" required/>  
                            </label>
                          </div>
                          <br>
                          <input type="submit" value="Submit" class="btn btn-primary">
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- end row -->

    <!-- row -->
    
    <!-- end row -->
</div>

<script>
     
    let code=document.getElementById("code")
    let discountType=document.getElementById("discountType")
    let discountAmount=document.getElementById("amount")
    let expiryDate=document.getElementById("date")
    let maxCartAmount=document.getElementById("cartAmount")
    let maxDiscountAmount=document.getElementById("amount")
    let maxCoupon=document.getElementById("couponCount")



    code.addEventListener("input",()=>{
      if(code.value.trim()==''){
        code.setCustomValidity("name cannot be null")
      }else if(code.value.trim().length<=4){
        code.setCustomValidity("minimum 4 letters required")

      }
      else{
        code.setCustomValidity("")
      }
    })
    discountType.addEventListener("input",()=>{
      if (discountType.value.trim()==""){
        discountType.setCustomValidity("discount type cannot be null")

      }else{
        discountType.setCustomValidity("")
      }
    })
    discountAmount.addEventListener("input",()=>{
      if(discountAmount.value.trim()==""){
        discountAmount.setCustomValidity("discount Amount cannot be null")

      }else{
        discountAmount.setCustomValidity("")
      }
    })
