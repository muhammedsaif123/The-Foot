<%- include('../layouts/header.ejs')%>

<div class="content-wrapper">
  <!-- Content -->
<!-- Add the following CSS stylesheets -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.min.css">

<!-- Add the following JavaScript scripts -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.min.js"></script>

  <div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">UserList</span></h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">
      <h5 class="card-header">Table Basic</h5>
      <div class="table-responsive text-nowrap">
        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Mobile</th>
              <th>verification</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <%
           if(users.length>0){

            for(let i=0;i<users.length;i++){
                 %>
                 <tr>
                  <td><%= users[i].name %></td>
                  <td><%= users[i].email %></td>
                  <td><%= users[i].mobile %></td>
                  
                  <%if(users[i].is_verified==1){%>
                    <td><span class="badge bg-label-success me-1">verified</span></td>
                    <%}else{%>
                      <td><span class="badge bg-label-warning me-1">not verified</span></td>
                      <%}%>

                  <%if(users[i].is_blocked==false){%>
                  <td><span class="badge bg-label-success me-1">Unblock</span></td>
                  <%}else{%>
                    <td><span class="badge bg-label-warning me-1">block</span></td>
                    <%}%>

                   
                    
                  <td><div class="dropdown">
                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                      <i class="bx bx-dots-vertical-rounded"></i>
                    </button>
                    <div class="dropdown-menu">
                      <%if(users[i].is_blocked==false){%>
                      <a href="#" onclick="blockUser('<%= users[i]._id %>')"  class="dropdown-item" href="javascript:void(0);"
                        ></i> block</a>
                      <%}else{%>
                      <a href="#"  onclick="unblockUser('<%= users[i]._id %>')" class="dropdown-item" href="javascript:void(0);"
                        ></i> Unblock</a
                      >
                      <%}%>
                    </div>
                  </div></td>
                  <!-- <td><a href="/admin/edit-user?id=<%= users[i]._id %>"><button class="bg-info" >EDIT</button></a></td>
                  <td><a href="/admin/delete-user?id=<%= users[i]._id %>"><button class="bg-danger" onclick="return confirm('do you want to delete the user <%=users.name %>')" >DELETE</button></a></td> -->
                 <%
            }

           }else{


            %>
            <tr>
              <td colspan="5">users not found</td>
            </tr>

            <%

           }
         %> 
          
        </table>
      </div>
    </div>
    <script>
      function blockUser(userId) {
        Swal.fire({
          title: 'Are you sure?',
          text: "You won't be able to revert this!",
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#3085d6',
          cancelButtonColor: '#d33',
          confirmButtonText: 'Yes, Block!'
        }).then((result) => {
          console.log(result,'hsai');
          if (result.isConfirmed) {
            $.ajax({
              url: '/admin/block',
              method: 'post',
              data: {
                id: userId
              },
              success: (response) => {
                if (response.is_blocked) {
                  location.reload();
                }
              },
              error: (error) => {
                console.error(error);
              }
            });
          }
        });
      }
      
    function unblockUser(userId) {
      console.log(userId);
      Swal.fire({
        title: 'Are you sure?',
        text: "You won't be able to revert this!",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, Un Block!'
      }).then((result) => {
        console.log(result);
        if (result.isConfirmed) {
          $.ajax({
            url: '/admin/unblock',
            method: 'post',
            data: {
              id: userId
            },
            success: (response) => {
              if (response.is_blocked == false) {
                location.reload();
              }
            },
            error: (error) => {
              console.error(error);
            }
          });
        }
      });
    }
  </script>
